{
  "name": "surabayajs.org",
  "description": "Landing page for SurabayaJS üêä",
  "version": "5.0.0",
  "repository": "https://github.com/surabayajs/surabayajs.org.git",
  "author": "Griko Nibras <griko@surabayajs.org>",
  "scripts": {
    "now-build": "yarn build:assets && yarn build:web",
    "build": "env-cmd yarn build:assets && env-cmd yarn build:web",
    "build:assets": "node scripts/build.js",
    "build:web": "next build",
    "clean": "rimraf .next \"public/!(social.jpg)\"",
    "develop": "next dev",
    "format": "yarn format:index && yarn format:scripts && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:scripts": "prettier --write \"scripts/**/*.js\"",
    "format:src": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "codegen": "env-cmd yarn graphql-codegen --config codegen.js"
  },
  "dependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "date-fns": "^2.16.1",
    "emotion-theming": "^10.0.27",
    "favicons": "^6.2.0",
    "graphql": "^15.3.0",
    "graphql-request": "^3.1.0",
    "next": "canary",
    "next-seo": "^4.10.0",
    "nprogress": "^0.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-markdown": "^4.3.1",
    "sitemap": "^6.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.10",
    "@graphql-codegen/typescript": "^1.17.10",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "all-contributors-cli": "^6.17.4",
    "env-cmd": "^10.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn contributors:generate && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "scripts/**/*.js": [
      "prettier --write"
    ],
    "src/**/*.{js,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
